<web-app>
<context-param>
	<param-name>dname</param-name>
	<param-value>oracle.jdbc.OracleDriver</param-value>
</context-param>
<context-param>
	<param-name>connurl</param-name>
	<param-value>jdbc:oracle:thin:@//SOURABHCOMPUTER:1521/orcl</param-value>
</context-param>
<context-param>
	<param-name>username</param-name>
	<param-value>library</param-value>
</context-param>
<context-param>
	<param-name>password</param-name>
	<param-value>paul</param-value>
</context-param>
<servlet>
	<servlet-class>LoginServlet</servlet-class>
	<servlet-name>LoginServlet</servlet-name>
	<init-param>
		<param-name>qry</param-name>
		<param-value>select * from allusers where userid=? and password=?</param-value>
	</init-param>
</servlet>
<servlet-mapping>
	<servlet-name>LoginServlet</servlet-name>
	<url-pattern>/LoginServlet</url-pattern>
</servlet-mapping>
<servlet>
	<servlet-class>RegistrationServlet</servlet-class>
	<servlet-name>RegistrationServlet</servlet-name>
	<init-param>
		<param-name>qry</param-name>
		<param-value>insert into allusers values(?,?,?)</param-value>
	</init-param>
</servlet>
<servlet-mapping>
	<servlet-name>RegistrationServlet</servlet-name>
	<url-pattern>/RegistrationServlet</url-pattern>
</servlet-mapping>
</web-app>